# Environment template for Portal Cautivo
# Copy to .env.local and fill in your production values
# WARNING: Never commit .env.local to version control!

# Flask Configuration
DEBUG=False
FLASK_ENV=production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_ME_TO_A_STRONG_RANDOM_SECRET_KEY_MIN_32_CHARS_HERE

# Allowed Hosts (comma-separated, for production use your domain)
ALLOWED_HOSTS=localhost,127.0.0.1

# Data Storage (file-based, paths relative to application root)
# Used by data_manager.py and app_simple.py
CSV_FILE=data/access_log.csv
DATA_DIR=data
LOG_DIR=logs

# Admin Configuration
# NOTE: Default user created on first run is admin/admin123
# IMPORTANT: Change password immediately in admin panel
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Session Configuration (for Gunicorn/Nginx deployment)
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
SESSION_TIMEOUT=1800
PERMANENT_SESSION_LIFETIME=3600

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
MAX_LOGIN_ATTEMPTS=5

# MikroTik Integration (optional)
# Leave empty if not integrating with MikroTik
MIKROTIK_HOST=192.168.1.1
MIKROTIK_USERNAME=admin
MIKROTIK_PASSWORD=

# Email Configuration (for password reset - NOT IMPLEMENTED YET)
# Password reset currently prints reset link to console only
# Uncomment and configure SMTP if you implement real email sending
# MAIL_SERVER=smtp.your-provider.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-app-password
# MAIL_DEFAULT_SENDER=noreply@seu-dominio.com

# Logging
LOG_LEVEL=INFO
LOG_FILE_LEVEL=DEBUG

# Security - Encryption Salt
# IMPORTANT: Generate unique salt per environment
# Generate with: python -c "import secrets; print(secrets.token_hex(16))"
ENCRYPTION_SALT=CHANGE_ME_TO_A_RANDOM_HEX_STRING_PER_ENVIRONMENT

# CORS/Security Headers
CORS_ORIGINS=*
MAX_CONTENT_LENGTH=16777216

# Feature Flags (planned for future versions)
ENABLE_REGISTRATION=True
ENABLE_PASSWORD_RESET=False
ENABLE_ADMIN_PANEL=True
